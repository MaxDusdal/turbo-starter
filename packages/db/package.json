{
    "name": "@repo/db",
    "version": "1.0.0",
    "description": "Shared Prisma client (source only)",
    "type": "module",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts",
            "require": "./src/index.ts"
        },
        "./types": {
            "types": "./src/types.ts",
            "import": "./src/types.ts",
            "require": "./src/types.ts"
        }
    },
    "sideEffects": false,
    "files": [
        "src"
    ],
    "scripts": {
        "build": "echo 'No build needed (source-only package)'",
        "dev": "tsx watch src/index.ts",
        "clean": "rimraf dist",
        "check-types": "tsc --noEmit",
        "postinstall": "dotenv -e ../../.env -- prisma generate",
        "prisma:generate": "dotenv -e ../../.env -- prisma generate",
        "prisma:migrate": "dotenv -e ../../.env -- prisma migrate dev",
        "prisma:studio": "dotenv -e ../../.env -- prisma studio",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^6.15.0",
        "prisma": "^6.15.0"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "typescript": "^5.8.2"
    }
}
