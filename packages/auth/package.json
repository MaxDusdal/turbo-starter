    "scripts": {
        "build": "echo 'No build needed (source-only package)'",
        "dev": "tsx watch src/index.ts",
        "clean": "rimraf dist",
        "check-types": "tsc --noEmit",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "better-auth": "^1.3.7",
        "@repo/db": "workspace:*"
