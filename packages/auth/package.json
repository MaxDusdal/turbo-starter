{
    "name": "@repo/auth",
    "version": "1.0.0",
    "description": "Better Auth configuration shared across services (source only)",
    "type": "module",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts",
            "require": "./src/index.ts"
